<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9DEFCCD"
    tools:context=".habits.habits.ReducePlasticActivity">

    <ImageView
        android:id="@+id/logo23"
        android:layout_width="66dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/reducePlasticTitle"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="273dp"
        android:layout_height="58dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="Plastik reduzieren"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dropdownmenu"
        android:layout_width="78dp"
        android:layout_height="56dp"
        android:clickable="true"
        app:backgroundTint="#F1F8E9"
        app:backgroundTintMode="src_over"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/menu" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reducePlasticTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="#D8FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/redPlasticWhy"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#A9DEFCCD"
                    android:gravity="center"
                    android:text="Warum?"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/redPlasticWhyContent"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="Plastik kann nicht abgebaut werden. Durch die unachtsame Entsorung von Plastikmüll, gelangt dieser vermehrt in die Ozeane und Meere...
                    \n\nFische und andere Meereslebewesen verfangen sich anschließend darin und sterben in Folge qualvoll.
                    \nOft werden die Meereslebewesen auch mit dem ganzen Plastikmüll an Land geschwemmt und vertrocknen daraufhin in der Sonne...
                    \n\nDas Plastik in der Umwelt betrifft allerdings nicht nur Meereslebewesen, sonder auch Tiere an Land!
                    \nUnbewusst konsumieren Tiere das Plastik das in der Umwelt verstreut liegt, wodurch es in ihren Organismus gelangt...
                    \n\nWusstet Ihr, das sogar wir Menschen bereits Plastik in unserem Blutkreislauf haben?"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/redPlasticWhat"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#A9DEFCCD"
                    android:gravity="center"
                    android:text="Was kann man selbst tun?"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/parOne"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Überflüssige Einwegprodukte vermeiden!
                    \n\nUnverpackt Läden!
                    \n\nWiederverwendbares statt Einweg!
                    \n\nObst und Gemüse lose kaufen!
                    \n\nEigene Mehrwegbehälter mitbringen!"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parTwo"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="Bei einem Coffee to go oder Essen zum Mitnehmen"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parThree"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Auf Inhaltsstoffe achten!"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parFour"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="Acryclate Copolymer(AC); Polyamide(PA); Siloxane
                    \nPolyethylen(PE); Polypropylen(PP); Polyethylenterephtalat(PET)
\n - Sind Mikroplasik"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parFive"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Feste Shampoos, Seifen und Spülungen!"
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parSix"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="Sie haben weniger oder in manchen Fällen keine Umverpackungen."
                    android:textColor="#E6181414" />

                <TextView
                    android:id="@+id/parSeven"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Kleidung Naturmaterial statt Synthetik!
                    \n\nMüll sammeln und trennen!"
                    android:textColor="#E6181414" />

                <Button
                    android:id="@+id/redPlasticLink"
                    android:layout_width="246dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#3C6DF1DD"
                    android:onClick="sustainableLink"
                    android:text="Nachhaltig-Sein.info" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backToHabits"
                    android:layout_width="156dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#CBDBFFC2"
                    android:text="Zurück zu den Gewohnheiten"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/Join"
                    android:layout_width="156dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#CBDBFFC2"
                    android:text="Beitreten"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/appName23"
        android:layout_width="66dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="Eco-Life"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo23" />

</androidx.constraintlayout.widget.ConstraintLayout>