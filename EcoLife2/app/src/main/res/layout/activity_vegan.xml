<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9DEFCCD"
    tools:context=".nutrition.VeganActivity">

    <TextView
        android:id="@+id/appName26"
        android:layout_width="66dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="Eco-Life"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo26" />

    <TextView
        android:id="@+id/veganTitle"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="229dp"
        android:layout_height="57dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Vegan"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dropdownmenu"
        android:layout_width="78dp"
        android:layout_height="56dp"
        android:clickable="true"
        app:backgroundTint="#F1F8E9"
        app:backgroundTintMode="src_over"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/logo26"
        android:layout_width="66dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veganTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sepWaste"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="#D8FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="322sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/veganIg"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#E0F2F1"
                        android:gravity="center"
                        android:text="Allgemein"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/veganContent"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Um hier Informationen zum Thema Veganismus bereitstellen zu können, habe ich mich umfangreich informiert.
                        \n\nEin großes Thema ist die Meinungsverschiedenheit der Leute, aber auch der 'Blödsinn' der im Internet verbreitet wird.
                        \n\nLiest man sich all das genau und sinnergreifend durch, fällt einem das nur bald auf!
                        \n\nGründe die genannt wurden, waren oft die Umwelt oder auch die eigene Gesundheit.
                        \n\nAlles in allem ist das meiste ein Wiederspruch in sich selbst! Tierische Erzeugnisse haben Inhaltstoffe die für den Menschen ebenso essentiell sind, wie jene die in Pflanzlichen Erzeugnisse enthalten sind!"
                        android:textColor="#E2161515" />

                    <TextView
                        android:id="@+id/veganWhy"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#E0F2F1"
                        android:gravity="center|left"
                        android:text="Gründe warum Vegan doch okay sein kann!"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/veganOne"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Bei Allergien und Unverträglichkeiten gegen Tierische Eiweiße!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veganTwo"
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="Es gibt Menschen die tatsächlich keine Tierischen Eiweiße vertragen, wodurch sie solche auch nicht zu sich nehmen können."
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veganThree"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Ethnische Gründe!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veganFour"
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="Sei es die Tierliebe, die nahezu Grenzen überschreitet, der Mord an Nutztieren oder auch die sogenannte Ausnutzung!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veganFive"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Verzicht auf Antibiotika haltige Tierprodukte!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veganSix"
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="Alternativ kann man natürlich auch auf die Herkunft achten.
                        \n\nEs ist keine Frage das gewisse Tierische Produkte mit Antibiotika vollgepumpt werden, aber dadurch lässt sich dieser Fakt noch lange nicht auf alles andere ableiten!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/veryImportant"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#E0F2F1"
                        android:gravity="center"
                        android:text="!!!SEHR WICHTIG!!!"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/importantDisclaimer"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Rede mit deinem Arzt über die geplante vegane Ernährung, lass dein Blutbild regelmäßig kontrollieren und Freunde dich mit dem Gedanken an, Nahrungsergänzungsmittel und Vitamine einnehmen zu müssen!"
                        android:textColor="#E6181414" />

                    <TextView
                        android:id="@+id/interestingLinks"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#E0F2F1"
                        android:gravity="center"
                        android:text="Informative Websites"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/websiteDisclaimer"
                        android:layout_width="311dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Wenn du mehr über das ganze Thema erfahren willst, hab ich dir hier unten ein paar Links eingefügt!"
                        android:textColor="#E6181414" />

                    <Button
                        android:id="@+id/link1"
                        android:layout_width="233dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="#3C6DF1DD"
                        android:onClick="openInfolink"
                        android:text="Gesund oder Riskant?" />

                    <Button
                        android:id="@+id/link2"
                        android:layout_width="233dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#3C6DF1DD"
                        android:onClick="openAnotherInfolink"
                        android:text="Wie gesund ist Vegan?" />

                    <Button
                        android:id="@+id/link3"
                        android:layout_width="233dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#3C6DF1DD"
                        android:onClick="openMoreInfolinks"
                        android:text="Wie gesund ist Vegan 2.0" />

                    <Button
                        android:id="@+id/link4"
                        android:layout_width="233dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#3C6DF1DD"
                        android:onClick="openEvenMoreInfolinks"
                        android:text="Warum Vegan?" />

                    <Button
                        android:id="@+id/link5"
                        android:layout_width="233dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#3C6DF1DD"
                        android:onClick="openLastInfolink"
                        android:text="Veganblatt.com" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backToHabits"
                    android:layout_width="156dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#CBDBFFC2"
                    android:text="Zurück zu den Gewohnheiten"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/Join"
                    android:layout_width="156dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#CBDBFFC2"
                    android:text="Beitreten"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>